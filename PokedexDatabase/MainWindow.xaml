<Window x:Class="PokedexDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokedexDatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>



        <ListView x:Name="ListData" ItemsSource="{Binding PokemonsObsv}" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="ListData_SelectionChanged" Margin="0,0,307,0" MouseDoubleClick="ListData_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding PokIDPK}" />
                    <GridViewColumn Header="PokDexID" DisplayMemberBinding="{Binding PokDexID}"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding PokName}"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding PokDescription}"/>
                    <GridViewColumn Header="Size" DisplayMemberBinding="{Binding PokSize}"/>
                    <GridViewColumn Header="Weight" DisplayMemberBinding="{Binding PokWeight}"/>
                    <GridViewColumn Header="RegIDFK" DisplayMemberBinding="{Binding PokRegIDFK}"/>

                </GridView>
            </ListView.View>

        </ListView>
        
        <!--Buttons-->
        <Button x:Name="BtnCreate" Content="Create New" HorizontalAlignment="Left" Margin="596,359,0,0" VerticalAlignment="Top" Height="55" Width="151" Click="BtnCreate_Click" Background="#FFDBF4FC" FontWeight="Bold" FontFamily="Arial Nova Cond Light" FontSize="16" Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="BtnRefresh" Content="Refresh" HorizontalAlignment="Left" Margin="596,295,0,0" VerticalAlignment="Top" Width="151" Height="51" Click="BtnRefresh_Click" Background="#FFFCFFEE" FontSize="16" FontWeight="Bold" FontFamily="Arial Nova Cond Light" Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="BtnEdit" Content="Edit" HorizontalAlignment="Left" Margin="596,229,0,0" VerticalAlignment="Top" Width="151" Height="51" Click="BtnEdit_Click" Background="#FFE6FFE6" FontFamily="Arial Nova Cond Light" FontWeight="Bold" FontSize="16" Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="BtnDelete" Content="Delete" HorizontalAlignment="Left" Margin="596,166,0,0" VerticalAlignment="Top" Width="151" Height="51" Click="BtnDelete_Click" Background="#FFF7CECE" FontFamily="Arial Nova Cond Light" FontWeight="Bold" FontSize="16" Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>



    </Grid>
</Window>
